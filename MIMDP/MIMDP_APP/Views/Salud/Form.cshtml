<style>
    .index {
        display: flex;
    }

    .contenido {
        width: 100%;
        padding: 20px;
    }

    .container-custom {
        width: 100%;
        height: auto;
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
    }
</style>

<partial name="_Header" model='TempData["UserName"]'></partial>

<div class="index">
    <partial name="_Sidebar" />

    <div class="contenido">
        <div class="container-custom">
            <form asp-action="SubmitForm" method="get">
                
                <div class="form-group">
                    <label for="NumeroDeTramitename" name="NumeroDeTramite">Proporcione el numero de tramite del DNI</label>
                    <input name="NumeroDeTramite" type="text" class="form-control" required>
                </div>
                <button asp-action="Index" asp-controller="Salud" type="submit" class="btn btn-primary">Submit</button>
                @ViewBag.Message
            </form>
        </div>

        
    </div>
</div>

<partial name="_Footer"></partial>