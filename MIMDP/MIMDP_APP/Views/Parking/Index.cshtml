@model MIMDP_APP.Models.Parking.Requests.ParkingInfoResponse;
@{
}
<style>
    .index {
        display: flex;
    }

    .contenido {
        width: 80%;
        padding: 20px;
    }

    .container-custom {
        width: 100%;
        height: auto;
        border: 1px solid #ccc;
        padding: 20px;
        margin-bottom: 20px;
    }
</style>

<partial name="_Header" model='TempData["UserName"]'></partial>

<div class="index">
        <partial name="_Sidebar" />

    <div class="contenido">
        <div class="container-custom">
            <form asp-action="SubmitForm" method="post">
                <div class="form-group">
                    <label for="patente">Número de la Patente</label>
                    <input type="text" class="form-control" id="patente" name="patente" required>
                </div>
                <div class="form-group">
                    <label for="horas">Duracion (En Horas)</label>
                    <input type="number" step="0.5" class="form-control" id="horas" name="horas" required>
                </div>
                <div class="form-group">
                    <label for="direccion">Dirección</label>
                    <input type="text" class="form-control" id="direccion" name="direccion" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <table class="table table-dark" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Patente</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Duración</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var parking in Model.Parking)
                {
                    <tr>
                        <th scope="row">@parking.Id</th>
                        <td>@parking.Patente</td>
                        <td>@parking.Direccion</td>
                        <td>@parking.DuracionEnHoras</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_Footer"></partial>